<form action="<%=action_url%>" method="POST">
    <%= auth_token %>
    <% if user.persisted? %>
        <%= patch_method_override %>
    <% end %>
    <label>Email:
        <input type="email" name="user[email]" value="<%=user.email%>">
    </label>

    <label>Password:
        <input type="password" name="user[password]">
    </label>

    <input type="submit" value="<%=submit_text%>">
</form>